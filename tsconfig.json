{
  "compilerOptions": {
    "types": ["node"],
    "target": "es6",
    "lib": ["es6"],
    "moduleDetection": "force",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
